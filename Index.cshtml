@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col"> 
            <h1 class="display-4">Welcome to the story generator!</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        <form asp-page="Index" class="form">
            <div class="form-group mb-3">
                <label for="Title">Title</label>
                <input type="text" asp-for="@Model.Details.Title" class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label for="Name">Name</label>
                <input type="text" asp-for="@Model.Details.Name" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label for="Tone">Tone</label>
                <input type="text" asp-for="@Model.Details.Tone" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label for="Creature">Creature</label>
                <input type="text" asp-for="@Model.Details.Creature" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label for="Environment">Environment</label>
                <input type="text" asp-for="@Model.Details.Environment" class="form-control" />
            </div>
            <input type="submit" class="btn btn-primary"/>


        </form>
    </div>
    <div class="col">
        <h2>@Model.Details.Title</h2>
        <p>@Model.StoryContent</p>
    </div>

</div>

